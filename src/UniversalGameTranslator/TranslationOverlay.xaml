<Window x:Class="UniversalGameTranslator.Views.TranslationOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TranslationOverlay" 
        Height="200" 
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">

    <Border CornerRadius="10" 
            Background="#E0000000" 
            BorderBrush="#FF2196F3" 
            BorderThickness="2"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              BlurRadius="15" 
                              ShadowDepth="5" 
                              Opacity="0.5"/>
        </Border.Effect>
        
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#FF2196F3" 
                    CornerRadius="5" 
                    Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🌐" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Live Translation" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Foreground="White"/>
                    <TextBlock Name="SourceIndicator"
                               Text="[API]" 
                               FontSize="10" 
                               Foreground="#FFBBDEFB"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Original Text -->
            <Border Grid.Row="2" 
                    Background="#FF1E1E1E" 
                    CornerRadius="5" 
                    Padding="15"
                    BorderBrush="#FF424242" 
                    BorderThickness="1">
                <TextBlock Name="OriginalTextBlock" 
                           Text="Original text will appear here"
                           Foreground="White"
                           FontSize="14"
                           TextWrapping="Wrap"
                           LineHeight="20"/>
            </Border>

            <!-- Translated Text -->
            <Border Grid.Row="4" 
                    Background="#FF0D4F3C" 
                    CornerRadius="5" 
                    Padding="15"
                    BorderBrush="#FF4CAF50" 
                    BorderThickness="1">
                <TextBlock Name="TranslatedTextBlock" 
                           Text="Translation will appear here"
                           Foreground="#FF81C784"
                           FontSize="16"
                           FontWeight="Medium"
                           TextWrapping="Wrap"
                           LineHeight="22"/>
            </Border>
        </Grid>
    </Border>
</Window>