<Window x:Class="UniversalGameTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversalGameTranslator"
        mc:Ignorable="d"
        Title="Universal Game Translator" 
        Height="720" 
        Width="1280"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        Icon="icon.ico">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="0,0,0,2">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🎮" FontSize="24" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Universal Game Translator" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Extract and translate game text automatically" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox Name="ShowOverlayCheckbox" 
                              Content="Show Overlay" 
                              Style="{StaticResource ModernCheckBoxStyle}"
                              IsChecked="True"
                              Margin="0,0,20,0"/>
                    <ComboBox Name="LanguageComboBox"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Width="120"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Português"/>
                        <ComboBoxItem Content="English"/>
                        <ComboBoxItem Content="Español"/>
                        <ComboBoxItem Content="Français"/>
                        <ComboBoxItem Content="Deutsch"/>
                        <ComboBoxItem Content="日本語"/>
                        <ComboBoxItem Content="한국어"/>
                        <ComboBoxItem Content="中文"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Game Selection -->
            <Border Grid.Column="0" 
                    Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    BorderBrush="{StaticResource PrimaryBrush}" 
                    BorderThickness="1">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Games Header -->
                    <TextBlock Grid.Row="0" 
                               Text="🕹️ Detected Games" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>

                    <!-- Games List -->
                    <ListBox Grid.Row="2"
                             Name="GamesListBox"
                             ItemsSource="{Binding DetectedGames}"
                             SelectedItem="{Binding SelectedGame}"
                             ItemTemplate="{StaticResource GameProcessTemplate}"
                             Style="{StaticResource ModernListBoxStyle}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>

                    <!-- Control Buttons -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="RefreshButton" 
                                Content="🔄 Refresh" 
                                Style="{StaticResource ModernButtonStyle}"
                                Margin="5"
                                Click="RefreshButton_Click"/>
                        <Button Name="StopButton" 
                                Content="⏹️ Stop" 
                                Style="{StaticResource ModernButtonStyle}"
                                Margin="5"
                                Click="StopButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel - Translations -->
            <Border Grid.Column="2" 
                    Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    BorderBrush="{StaticResource PrimaryBrush}" 
                    BorderThickness="1">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Translations Header -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="💬 Live Translations" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        
                        <Button Grid.Column="1"
                                Name="ClearButton"
                                Content="🗑️ Clear"
                                Style="{StaticResource ModernButtonStyle}"
                                Click="ClearButton_Click"/>
                    </Grid>

                    <!-- Translations List -->
                    <ScrollViewer Grid.Row="2" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl Name="TranslationsItemsControl"
                                      ItemsSource="{Binding Translations}"
                                      ItemTemplate="{StaticResource TranslationEntryTemplate}"/>
                    </ScrollViewer>

                    <!-- Translation Stats -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Name="TranslationCountText" 
                                   Text="0 translations" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="10,0"/>
                        <TextBlock Name="HookStatusText" 
                                   Text="Ready" 
                                   Foreground="{StaticResource SecondaryBrush}"
                                   FontSize="12"
                                   Margin="10,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="0,2,0,0">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Name="StatusText" 
                           Grid.Column="0"
                           Text="Ready to capture game text..." 
                           Foreground="{StaticResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Name="StatusIndicator" 
                             Width="8" 
                             Height="8" 
                             Fill="#FF4CAF50" 
                             Margin="0,0,5,0"/>
                    <TextBlock Text="v1.0.0" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="10"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>